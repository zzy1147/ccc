<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MatchingFragment">

    <include
        layout="@layout/layout_base_title"/>
    <LinearLayout
        android:id="@+id/own_info_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.snz.rskj.android.design.CircleImageView
            android:id="@+id/own_head_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/header_icon_2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="用户名称"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="完善资料获得更多"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_jiantou_right" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/own_safe_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="账号与安全"
            android:drawableLeft="@drawable/icon_own_safe"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_jiantou_right" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/own_pipei_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="匹配设置"
            android:drawableLeft="@drawable/icon_own_pipei"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_jiantou_right" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/own_clear_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="清除缓存"
            android:drawableLeft="@drawable/icon_own_clear"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_jiantou_right" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_about_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="关于"
            android:drawableLeft="@drawable/icon_own_about"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_jiantou_right" />
    </LinearLayout>


    <TextView
        android:id="@+id/own_exit_button"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_shape_white_empty"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>