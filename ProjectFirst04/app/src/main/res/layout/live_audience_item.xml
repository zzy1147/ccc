<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_47">
    <com.netease.nim.chatroom.demo.im.ui.widget.CircleImageView
        android:id="@+id/audience_image"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/audience_name"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/audience_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/textColor"
        android:text="大萝卜"/>

    <TextView
        android:id="@+id/audience_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:text="  1.2W"
        android:textColor="@color/textColor"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:drawableStart="@drawable/icon_money"
        />

    <ImageView
        android:id="@+id/audience_microphone"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/audience_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_microphone"/>
</RelativeLayout>