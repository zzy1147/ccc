<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/shape_gift_backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:src="@drawable/icon_gift_chocolate" />
    <RelativeLayout
        android:id="@+id/rl_fans"
        android:gravity="center"
        android:background="@drawable/shape_user_backgroud"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_above="@id/rl_like"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_48">
        <TextView
            android:id="@+id/user_fans_num"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_fans"
            android:drawablePadding="@dimen/dp_3"
            android:text="1234"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/user_fans"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_fans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_14"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_like"
        android:gravity="center"
        android:background="@drawable/shape_user_backgroud"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignBottom="@id/user_image"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_48">
        <TextView
            android:id="@+id/user_like_num"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_praised"
            android:drawablePadding="@dimen/dp_3"
            android:text="1234"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/user_like"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被赞"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_14"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/user_sendmessage"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignBottom="@id/user_addfollow"
        android:layout_toLeftOf="@id/user_addfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_send_message"/>

    <ImageView
        android:id="@+id/user_addfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/button_follow" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_marginTop="@dimen/dp_42" android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:text="淘气鬼"
        android:textColor="@color/textColor"
        android:drawablePadding="@dimen/dp_5"
        android:drawableEnd="@drawable/select_user_sex"/>
    <TextView
        android:id="@+id/user_signature"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:text="这个家伙很懒，不想写个性签名。"
        android:textColor="@color/report_textcolor"/>
    <TextView
        android:id="@+id/user_region"
        android:layout_below="@id/user_signature"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_12"
        android:text="地区：北京 朝阳"/>
    <TextView
        android:id="@+id/user_age"
        android:layout_below="@id/user_region"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_12"
        android:text="年龄：35岁"/>
    <TextView
        android:id="@+id/user_profession"
        android:layout_below="@id/user_age"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_12"
        android:text="职业：Java高级工程师"/>
    <TextView
        android:id="@+id/user_production"
        android:layout_below="@id/user_age"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_14"
        android:text="他的作品 (23)"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_production_list"
        android:layout_below="@id/user_production"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>