<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FF323544"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_10">


    <com.snz.rskj.android.design.CircleImageView
        android:id="@+id/chat_fg_rv_item_img"
        android:layout_width="@dimen/dp_60"

        android:layout_height="@dimen/dp_60"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_fg_rv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="名字"
            android:textColor="@color/color_text_reg"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="作品："

                android:textColor="@color/color_text_reg"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/chat_fg_tt_prc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="24"
                android:textColor="@color/color_text_reg"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:lines="1"
                android:text="粉丝："

                android:textColor="@color/color_text_reg"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/chat_fg_tt_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="24"
                android:textColor="@color/color_text_reg"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/dp_60"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人签名"
            android:textColor="@color/color_text_reg"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/chat_fg_tt_item_tag"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:text="text_tag"
            android:textColor="@color/color_text_reg"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:gravity="right">

        <ImageView
            android:id="@+id/chat_fg_img_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

</LinearLayout>
