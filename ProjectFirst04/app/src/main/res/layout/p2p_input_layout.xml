<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/voice_btn"
        android:src="@drawable/nim_message_input_voice_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/chat_input"
        android:layout_toRightOf="@id/voice_btn"
        android:layout_toLeftOf="@id/p2p_emoji_btn"
        android:singleLine="true"
        android:imeOptions="actionSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_12"
        android:background="@null"
        android:padding="@dimen/dp_5"
        android:hint="发送消息..."/>
    <ImageView
        android:id="@+id/p2p_emoji_btn"
        android:layout_toLeftOf="@id/p2p_picture_btn"
        android:src="@drawable/nim_emoji_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/p2p_picture_btn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_gfit_bear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>