<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">
    <ImageView
        android:id="@+id/gift_image"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/icon_gift_rose"
        android:background="@null"/>
    <TextView
        android:id="@+id/gift_current_num"
        android:layout_alignRight="@id/gift_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gift_circle"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:text="1"/>
    <TextView
        android:layout_below="@id/gift_image"
        android:id="@+id/gift_name"
        android:text="鲜花"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gift_money"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费"
        android:textSize="@dimen/sp_10"
        android:textColor="#FF2929"/>

</RelativeLayout>