<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_gravity="center_horizontal"
    android:background="@drawable/home_call_pop_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/chat_pop_off"
        android:layout_width="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"

        android:layout_marginRight="0dp"
        android:src="@drawable/button_off_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="right">

        <TextView
            android:id="@+id/chat_pop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/5" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/add_lin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_pop_off"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_pop_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圈子名称" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/chat_pop_text1"
            android:background="@drawable/char_pop_cirle_et_bg"
            android:hint="输入圈子名称"
            android:maxLines="20"
            android:id="@+id/chat_et_text"
            android:paddingLeft="@dimen/dp_3"
            android:textSize="@dimen/dp_10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/chat_pop_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/20" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/add_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_pop_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圈子简介" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_79"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/chat_pop_text2"
            android:background="@drawable/char_pop_cirle_et_bg"
            android:gravity="left|top"
            android:id="@+id/chat_et_text1"
            android:hint="介绍一下你的圈子吧"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="@dimen/dp_4"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <Button
        android:id="@+id/chat_pop_creat"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/chat_edtext_bg"
        android:text="创建"
        android:textColor="@color/white" />


</LinearLayout>
