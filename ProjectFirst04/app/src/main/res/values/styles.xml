<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>

    </style>

    <style name="AppTheme.Skid_1" parent="AppTheme.StatusTranslate" tools:ignore="DuplicateDefinition">

        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/app_theme_bg</item>
    </style>

    <!--沉浸式主题-->


    <style name="AppTheme.StatusTranslate" parent="Theme.AppCompat.Light.NoActionBar">

        <!--状态栏透明并且最外层布局顶格，除非使用android:fitsystem="true"-->


        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.Skid_1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Skid_1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Skid_11" parent="AppTheme.StatusTranslate">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false
        </item>

    </style>


</resources>
